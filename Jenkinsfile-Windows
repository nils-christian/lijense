pipeline {

	agent any

	environment {
		DOCKER_IMAGE = 'maven:3.5-jdk-8'
	}
	
	stages {
		stage('Docker Pull') {
			steps {
				bat 'docker pull %DOCKER_IMAGE%'
			}
		}
		
		stage('Build') {
			steps {
				bat 'docker run -v %WORKSPACE%:/workspace -v %TEMP%/.m2:/root/.m2 -w /workspace %DOCKER_IMAGE% /bin/bash -c "mvn clean package"'
				archiveArtifacts artifacts: 'target/lijense-*.jar', fingerprint: true
			}
		}
	}
	
	post {
		always {
			junit "target/surefire-reports/*.xml"
			deleteDir()
		}
	}
	
}